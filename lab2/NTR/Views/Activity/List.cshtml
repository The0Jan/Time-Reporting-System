@model IEnumerable<NTR.Models.ActivityModel>

@{
    ViewData["Title"] = "Index";
    int sum = 0;
}

<h1>List</h1>
<body>
        <div class="text-center">
            <form>
            <h2> Today is @ViewBag.date </h2>
            <p>Change preview date</p>
            <input type="date" name="date" onchange="this.form.submit()">
            </form>
        </div>
<table class="table">
    <thead>
        <tr>
            <th>
                Activity Index
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        sum = sum + item.Time;
        <tr>
            <td>
                @item.ActivityModelId
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @if(ViewBag.submitted != 1 ){
                    <a asp-action="Edit" asp-route-id="@item.ActivityModelId">Edit</a> ;
                    <a asp-action="Delete" asp-route-id="@item.ActivityModelId">Delete</a> ;
                }
                <a asp-action="Details" asp-route-id="@item.ActivityModelId">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
<p> Total time spent on projects: @sum </p>
<p>
    <form asp-action="Submit">
        <input type="hidden" class="form-control" name = "date" value = "@ViewBag.date" > 
        <input type="submit" value="Submit" class="btn btn-primary" />
    </form>
    <a asp-action="Create" >Create New</a>
</p>

</body>
